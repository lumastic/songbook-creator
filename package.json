{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i tailwind.config.css -o app/styles/tailwind.css",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:clear": "rm -r postgres-data",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i tailwind.config.css -o app/styles/tailwind.css",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "cross-env NODE_ENV=production netlify dev",
    "test:unit": "dotenv -e .env.test -- vitest --dir ./app",
    "test:unit:ci": "npm run test:unit -- --run",
    "test:e2e": "start-server-and-test dev http://localhost:3000 'cypress open'",
    "typecheck": "tsc -b && tsc -b cypress && tsc -b test/e2e"
  },
  "dependencies": {
    "@netlify/functions": "^1.3.0",
    "@remix-run/netlify": "^1.7.6",
    "@remix-run/node": "^1.7.6",
    "@remix-run/react": "^1.7.6",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^6.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.6",
    "@remix-run/eslint-config": "^1.7.6",
    "@remix-run/serve": "^1.7.6",
    "@testing-library/cypress": "^8.0.7",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@vitejs/plugin-react": "^2.2.0",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "cypress": "^11.2.0",
    "eslint": "^8.27.0",
    "happy-dom": "^7.7.0",
    "postcss": "^8.4.19",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.8.4",
    "vite": "^3.2.4",
    "vite-tsconfig-paths": "^3.6.0",
    "vitest": "^0.25.3"
  },
  "engines": {
    "node": ">=14"
  }
}
